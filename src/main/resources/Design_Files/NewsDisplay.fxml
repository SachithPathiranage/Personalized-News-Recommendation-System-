<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<AnchorPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.OOD.Controllers.NewsController">
    <!-- Top Bar for Branding or Navigation -->
    <VBox prefHeight="42.0" prefWidth="800.0" spacing="10" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <HBox alignment="TOP_RIGHT" minHeight="-Infinity" minWidth="-Infinity" prefHeight="57.0" prefWidth="800.0"
              spacing="10" styleClass="top-right-hbox" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <Button fx:id="forYouButton" prefHeight="35.0" prefWidth="92.0" text="For You" onAction="#ForYouButtonClick">
                    <font>
                        <Font name="Times New Roman Bold" size="12.0"/>
                    </font>
                    <HBox.margin>
                        <Insets right="50.0" top="12.0"/>
                    </HBox.margin>
                </Button>

                <Button fx:id="preferencesButton" onAction="#handleUserIconClick" prefHeight="36.0" prefWidth="51.0">
                    <HBox.margin>
                        <Insets right="15.0" top="12.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
        <Separator/>

    </VBox>


    <!-- TabPane for Category Selection -->
    <TabPane prefHeight="480" prefWidth="780" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="10.0"
             AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="60.0">

        <!-- General Category Tab: Displays current selected tab content -->
        <Tab closable="false" text="General">
            <!-- Main Content Section -->
            <VBox prefWidth="1030" spacing="10" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="10.0"
                  AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="60.0">
                <ListView fx:id="newsListView" prefHeight="530" prefWidth="800">
                    <!-- Custom List Cell -->
                    <items>
                        <!-- Placeholder will be dynamically populated -->
                    </items>
                    <VBox.margin>
                        <Insets right="12.0"/>
                    </VBox.margin>
                </ListView>
            </VBox>
        </Tab>

        <!-- Tech Category Tab -->
        <Tab closable="false" text="Tech">
            <VBox spacing="10">
                <ListView fx:id="techListView" prefHeight="430" prefWidth="760">
                    <!-- Tech News Items will be dynamically populated -->
                </ListView>
            </VBox>
        </Tab>

        <!-- Entertainment Category Tab -->
        <Tab closable="false" text="Entertainment">
            <VBox spacing="10">
                <ListView fx:id="entertainmentListView" prefHeight="430" prefWidth="760">
                    <!-- Entertainment News Items will be dynamically populated -->
                </ListView>
            </VBox>
        </Tab>

        <!-- Business Category Tab -->
        <Tab closable="false" text="Business">
            <VBox spacing="10">
                <ListView fx:id="businessListView" prefHeight="430" prefWidth="760">
                    <!-- Business News Items will be dynamically populated -->
                </ListView>
            </VBox>
        </Tab>

        <!-- Sports Category Tab -->
        <Tab closable="false" text="Sports">
            <VBox spacing="10">
                <ListView fx:id="sportsListView" prefHeight="430" prefWidth="760">
                    <!-- Sports News Items will be dynamically populated -->
                </ListView>
            </VBox>
        </Tab>

        <!-- Politics Category Tab -->
        <Tab closable="false" text="Politics">
            <VBox spacing="10">
                <ListView fx:id="politicsListView" prefHeight="430" prefWidth="760">
                    <!-- Politics News Items will be dynamically populated -->
                </ListView>
            </VBox>
        </Tab>

        <!-- Travel Category Tab -->
        <Tab closable="false" text="Travel">
            <VBox spacing="10">
                <ListView fx:id="travelListView" prefHeight="430" prefWidth="760">
                    <!-- Travel News Items will be dynamically populated -->
                </ListView>
            </VBox>
        </Tab>

        <!-- Food Category Tab -->
        <Tab closable="false" text="Food">
            <VBox spacing="10">
                <ListView fx:id="foodListView" prefHeight="430" prefWidth="760">
                    <!-- Food News Items will be dynamically populated -->
                </ListView>
            </VBox>
        </Tab>

        <!-- Health Category Tab -->
        <Tab closable="false" text="Health">
            <VBox spacing="10">
                <ListView fx:id="healthListView" prefHeight="430" prefWidth="760">
                    <!-- Health News Items will be dynamically populated -->
                </ListView>
            </VBox>
        </Tab>

    </TabPane>
    <Label alignment="CENTER" layoutX="-1.0" layoutY="-7.0" prefHeight="81.0" prefWidth="223.0"
           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-padding: 10px "
           text="News Explorer"/>
    <stylesheets>
        <URL value="@../Styling_Sheets/news.css"/>
    </stylesheets>
</AnchorPane>
